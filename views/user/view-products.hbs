    <section>
         <div class="container mt-5">
        <div class="row">
            {{#each products}}

            <div class="col-md-3">
                <div class="card" style="width: 15rem; height: 25rem;">
   <img src="/product-images/{{this._id}}.jpg" class="card-img-top"
