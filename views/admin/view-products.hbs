<section>
    <div class="container">
      <div class="row mt-5">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
      </div>
               <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Tittle</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
  {{#each products}}  
    <tr> 
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Discription}}</td>
      <td><img style="width: 65px;height:55px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You Want To Delete {{this.Name}}?')">Delete</a>
     
        
        </td>
     
    </tr>
    {{/each}}
   
  
  </tbody>
</table>
    </div>
</section>